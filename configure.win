#!/bin/sh

if [ $R_ARCH = "/x64" ]
then
	PYTHON_PATH=$PYTHON_X64_PATH
else
	PYTHON_PATH=$PYTHON_X86_PATH
fi

cp -R ${PYTHON_PATH}/Lib inst/lib

# TODO this fails to copy the dlls to the package's 'libs' folder
cp -R ${PYTHON_PATH}/libs src

echo 'PKG_CFLAGS=-I"'${PYTHON_PATH}'/include"'     > src/makevars.win
# TODO is this an acceptable way to inject a linker option (-static)?
echo 'PKG_LIBS=-static -L"'${PYTHON_PATH}'/libs" -lpython27'  >> src/makevars.win
