#!/bin/sh

if [ $R_ARCH = "/x64" ]
then
	PYTHON_PATH=$PYTHON_X64_PATH
else
	PYTHON_PATH=$PYTHON_X86_PATH
fi

cp -R ${PYTHON_PATH}/Lib inst/lib

mkdir -p src${R_ARCH}
cp -rf ${PYTHON_PATH}/libs/* src${R_ARCH}

echo 'PKG_CFLAGS=-I"'${PYTHON_PATH}'/include"'     > src/makevars.win

echo 'PKG_LIBS=-L"'${PYTHON_PATH}'/libs" -lpython27'  >> src/makevars.win

ls -alR src

